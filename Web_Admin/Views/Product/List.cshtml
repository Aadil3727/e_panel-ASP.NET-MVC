@model IEnumerable<AdminData.Models.Product.Product_db>
@{
    ViewData["Title"] = "List";
}

<style>
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        height: 20px;
        width: 20px;
        outline: black;
        color: aqua !important;
        background-color: black;
        border-radius: 80%;
        border: 1px solid black;
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(productId) {
            $('#deleteConfirmationModal-' + productId).modal('show');
        }

        function deleteProduct(productId) {
            $.ajax({
                url: '/Product/DeleteProduct',
                type: 'POST',
                data: { productId: productId, adminId: 'yourAdminId' }, // Add adminId parameter
                success: function (data) {
                    // Handle success, e.g., refresh the page or update the UI

                    location.reload();
                },
                error: function (error) {
                    alert('Error deleting product');
                }
            });
            $('#deleteConfirmationModal-' + productId).modal('hide');
        }
    </script>
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Product table</h6>
                </div>
            </div>

            <a asp-action="Create" asp-controller="Product" class="btn bg-gradient-light mb-0 mr-3">
                <i class="material-icons text-sm">add</i>&nbsp;&nbsp;Add New Product
            </a>

            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center justify-content-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Category</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Product Images</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Description</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2">
                                            <div>
                                                @if (!string.IsNullOrEmpty(item.ProImg))
                                                {
                                                    var imageUrl = $"~/uploads/ProductImages/{item.ProImg}";
                                                    <img src="@Url.Content(imageUrl)" data-image-url="@Url.Content(imageUrl)" class="avatar avatar-sm rounded-circle me-2">
                                                }
                                                else
                                                {
                                                    <span>No Image Available</span>
                                                }
                                            </div>
                                            <div class="my-auto">
                                                <span class="text-sm font-weight-bold mb-0">@item.Name</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-sm font-weight-bold mb-0">₹@item.price</p>
                                    </td>
                                    <td>
                                        <span class="text-sm font-weight-bold mb-0">@item.Category.Name</span>
                                    </td>

                                    <td class="align-middle text-center">
                                        <div id="carouselExample-@item.Id" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                @if (!string.IsNullOrEmpty(item.Images))
                                                {
                                                    var imageArray = System.Text.RegularExpressions.Regex.Split(item.Images, @"[\\,]+");
                                                    var isFirstImage = true;

                                                    foreach (var imageName in imageArray)
                                                    {
                                                        @if (imageName != "")
                                                        {
                                                            var trimmedImageName = imageName.Trim();
                                                            var imageUrl = $"~/uploads/ProductImages/{trimmedImageName}";

                                                            <div class="carousel-item @(isFirstImage ? "active" : "")">
                                                                <img src="@Url.Content(imageUrl)" style="height:5vh;">
                                                            </div>

                                                            isFirstImage = false;
                                                        }
                                                    }
                                                }
                                            </div>
                                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample-@item.Id" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" style="color:aqua" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample-@item.Id" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>
                                    </td>
                                    @{
                                        var truncatedDescription = item.Description.Length > 50
                                        ? item.Description.Substring(0, Math.Min(50, item.Description.Length)) + "..."
                                        : item.Description;
                                    }
                                    <td class="align-middle">
                                        <p class="text-sm font-weight-bold mb-0">@truncatedDescription</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">Details</a>
                                        <button class="btn btn-danger" onclick="confirmDelete('@item.Id')">Delete</button>
                                    
                                    </td>
                                    
                                </tr>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" tabindex="-1" role="dialog" id="deleteConfirmationModal-@item.Id">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirm Delete</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this product?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger" onclick="deleteProduct('@item.Id')">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
